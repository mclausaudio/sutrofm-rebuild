<% include ../partials/header2 %>

<section>
    <div class="container text-center">
        <h1><%=currentUser.username%>'s Polls</h1>
    </div>
    
    <!--if (currentUser && poll.author.id.equals(currentUser._id))-->
        <div class="container">
        <div class="row">
          <% polls.reverse().forEach(function(poll) { %>
          <% if (currentUser && poll.author.id.equals(currentUser._id)) { %>
            <div class="col-lg-3 col-md-6 text-center">
              <div class="service-box mt-5 mx-auto">
                <i class="fa fa-4x fa-list-alt text-primary mb-3 sr-icons"></i>
                <h3 class="mb-3"><%= poll.title %></h3>
                <p class="text-muted mb-0"><a href="/polls/<%= poll._id %>" class="btn btn-primary">View</a></p>
              </div>
            </div>           
          <% } %>
          <% }); %>
        </div>
      </div>
</section>