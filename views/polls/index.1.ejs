<% include ../partials/header %>



    <header class="hero text-center">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-xl-9 mx-auto">
            <h1 class="mb-5">Votetonometry</h1>
          </div>
          <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                <div class="col-12 col-md-3 text-center">
                  <button type="submit" class="btn btn-block btn-lg btn-primary">Create Poll</button>
                </div>
          </div>
        </div>
      </div>
    </header>
<a href="/polls/new">New Poll</a>
    <section class="features-icons bg-light text-center">
      <div class="container">
        <div class="row">
          <div class="col-lg-4">
            <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
              <div class="features-icons-icon d-flex">
                <i class="icon-screen-desktop m-auto text-primary"></i>
              </div>
              <h3>Fully Responsive</h3>
              <p class="lead mb-0">This theme will look great on any device, no matter the size!</p>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
              <div class="features-icons-icon d-flex">
                <i class="icon-layers m-auto text-primary"></i>
              </div>
              <h3>Bootstrap 4 Ready</h3>
              <p class="lead mb-0">Featuring the latest build of the new Bootstrap 4 framework!</p>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="features-icons-item mx-auto mb-0 mb-lg-3">
              <div class="features-icons-icon d-flex">
                <i class="icon-check m-auto text-primary"></i>
              </div>
              <h3>Easy to Use</h3>
              <p class="lead mb-0">Ready to use with your own content, or customize the source files!</p>
            </div>
          </div>
        </div>
      </div>
    </section>


<section class="text-center bg-light">
  <div class="container polls">
    <h3>Previous polls below</h3>
    <% polls.reverse().forEach(function(poll) { %>
        <div class="col-lg-3 polls-item border">
          <div class="mx-auto mb-5 mb-lg-0 mb-lg-3">
            <h4><%= poll.title %></h4>
            <a href="/polls/<%= poll._id %>" class="btn btn-primary">View</a>
          </div>
        </div>
    <% }); %>
  </div>
</section>


<div class="container-fluid text-center mx-auto">
  <% include ../partials/footer %>
</div>
  

