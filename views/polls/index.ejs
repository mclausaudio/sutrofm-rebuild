<% include ../partials/header %>


      <section class="bg-dark text-white">
      <div class="container text-center">
        <% if (!currentUser) { %>
          <h2 class="mb-4">Sign in to get started</h2>
          <a class="btn btn-light btn-xl sr-button mr-3" href="/login">Login</a>
          <a class="btn btn-light btn-xl sr-button" href="/signup">Sign Up</a>       
        <% } else { %>
          <h2 class="mb-4">Welcome back, <%= currentUser.username %>!</h2>
          <a class="btn btn-light btn-xl sr-button mr-3" href="/polls/new">Create New Poll</a>
        <% } %>
      </div>
    </section>
    <section id="services">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading">Current Polls</h2>
            <hr class="my-4">
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <% polls.reverse().forEach(function(poll) { %>
            <div class="col-lg-3 col-md-6 text-center">
              <div class="service-box mt-5 mx-auto">
                <i class="fa fa-4x fa-list-alt text-primary mb-3 sr-icons"></i>
                <h3 class="mb-3"><%= poll.title %></h3>
                <h6>Created by: <%= poll.author.username %></h6>
                <p class="text-muted mb-0"><a href="/polls/<%= poll._id %>" class="btn btn-primary">View</a></p>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </section>
      <section id="contact">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto text-center">
            <h2 class="section-heading">Let's Get In Touch!</h2>
            <hr class="my-4">
            <p class="mb-5">Pollux allows users to ask questions in the form of polls to find out what their team and friends are thinking.  To sign up, simply enter a valid username and password, no email needed!  Visitors do not need to create an account to vote on an existing poll.  Pollux was created by <a href="mailto:mclausaudio@gmail.com?subject=Pollux App">Michael Claus</a>.  It was built using NodeJS, MongoDB, ExpressJS, and Bootstrap.  You can check out more of Michael's work on his website below.</p>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-4 ml-auto text-center">
            <i class="fa fa-laptop fa-3x mb-2 sr-contact"></i>
            <p>
              <a href="#">www.michaelclaus.io</a>
            </p>
          </div>
          <div class="col-lg-4 mr-auto text-center">
            <i class="fa fa-envelope-o fa-3x mb-2 sr-contact"></i>
            <p>
              <a href="mailto:mclausaudio@gmail.com">mclausaudio@gmail.com</a>
            </p>
          </div>
        </div>
      </div>
    </section>
  </body>

